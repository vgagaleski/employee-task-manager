<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.teodora.employeetaskmanager.Activities.AssignTaskActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_assignee"
                        android:textStyle="bold"
                        android:elegantTextHeight="true"
                        android:textSize="@dimen/small_txt_size"
                        android:textColor="@color/primaryText"
                        android:text="Asignee"
                        />
                </LinearLayout>

                <!--<View-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="0.5dp"-->
                    <!--android:layout_marginLeft="45dp"-->
                    <!--android:layout_marginRight="5dp"-->
                    <!--android:background="#c0c0c0"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_desc"
                        android:textStyle="bold"
                        android:textSize="@dimen/small_txt_size"
                        android:textColor="@color/primaryText"
                        android:elegantTextHeight="true"
                        android:text="Asigned by"
                        />
                </LinearLayout>

                <!--<View-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="0.5dp"-->
                    <!--android:layout_marginLeft="45dp"-->
                    <!--android:layout_marginRight="5dp"-->
                    <!--android:background="#c0c0c0"/>-->

                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:paddingTop="15dp"
                      android:paddingBottom="15dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_query_builder_black_24dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_time"
                        android:textStyle="bold"
                        android:textSize="@dimen/small_txt_size"
                        android:textColor="@color/primaryText"
                        android:elegantTextHeight="true"
                        android:text="Due date"
                        />
                </LinearLayout>

                <!--<View-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="0.5dp"-->
                    <!--android:layout_marginLeft="45dp"-->
                    <!--android:layout_marginRight="5dp"-->
                    <!--android:background="#c0c0c0"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_date_range_black_24dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_date"
                        android:textStyle="bold"
                        android:textSize="@dimen/small_txt_size"
                        android:textColor="@color/primaryText"
                        android:elegantTextHeight="true"
                        android:text="Project"
                        />
                </LinearLayout>
            </LinearLayout>


        </android.support.design.widget.AppBarLayout>


        <ScrollView
            android:id="@+id/scrollViewId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar"
            android:background="@color/dirty_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="5dp"
                    android:background="#c0c0c0"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/priorityIcon"
                        android:layout_height="32dp"
                        android:layout_width="32dp"
                        android:layout_gravity="center_vertical"
                        android:elevation="4dp"
                        android:src="@drawable/ic_flag_black_24dp"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:textSize="@dimen/small_txt_size"
                            android:textColor="@color/primaryText"
                            android:text="@string/priorityText" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:textSize="@dimen/very_small_txt_size"
                            android:textColor="@color/primaryText"
                            android:hint="Medium" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="5dp"
                    android:background="#c0c0c0"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/descriptionIcon"
                        android:layout_height="32dp"
                        android:layout_width="32dp"
                        android:layout_gravity="center_vertical"
                        android:elevation="4dp"
                        android:src="@drawable/ic_description_black_24dp"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:textSize="@dimen/small_txt_size"
                            android:textColor="@color/primaryText"
                            android:text="@string/descriptionText" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:textSize="@dimen/very_small_txt_size"
                            android:textColor="@color/primaryText"
                            android:hint="No description" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="5dp"
                    android:background="#c0c0c0"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/locationIcon"
                        android:layout_height="32dp"
                        android:layout_width="32dp"
                        android:layout_gravity="center_vertical"
                        android:elevation="4dp"
                        android:src="@drawable/ic_location_on_black_24dp"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:textSize="@dimen/small_txt_size"
                            android:textColor="@color/primaryText"
                            android:text="@string/locationText" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:textSize="@dimen/very_small_txt_size"
                            android:textColor="@color/primaryText"
                            android:hint="No location" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_send_white_24dp"
        app:layout_anchor="@id/scrollViewId"
        app:layout_anchorGravity="bottom|right|end"/>



</android.support.design.widget.CoordinatorLayout>
