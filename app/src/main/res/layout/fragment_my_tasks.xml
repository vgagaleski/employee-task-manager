<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.teodora.employeetaskmanager.Fragments.MyTasksFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dirty_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">

                <!--<ImageView-->
                    <!--android:id="@+id/dueDateIcon"-->
                    <!--android:layout_width="32dp"-->
                    <!--android:layout_height="32dp"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:elevation="4dp"-->
                    <!--android:src="@drawable/red_circle"-->
                    <!--tools:ignore="ContentDescription" />-->

                <LinearLayout
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:background="#990000">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="@string/dueDateText"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/small_txt_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:hint="Today"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/small_txt_size" />
                </LinearLayout>

                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/donut_progress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    custom:donut_progress="70"
                    custom:donut_finished_stroke_width="6dp"
                    custom:donut_unfinished_stroke_width="6dp"
                    custom:donut_text_size="16dp"
                    custom:donut_finished_color="@color/colorPrimary"
                    custom:donut_text_color="@color/colorPrimary"
                    custom:donut_unfinished_color="@color/colorAccent"/>


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="5dp"
                android:background="#c0c0c0" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
