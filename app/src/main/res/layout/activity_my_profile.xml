<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dirty_white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_background" />


        <ImageView
            android:id="@+id/edit_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/drop_down_option_menu"
            android:src="@drawable/ic_mode_edit_white_24dp" />

        <ImageView
            android:id="@+id/drop_down_option_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_more_vert_white_24dp" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/colorAccent"
            android:elevation="4dp"
            android:paddingBottom="15dp">



            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="86dp"
                android:text="Teodora Popordanoska"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_my_photo" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:layout_margin="@dimen/card_margin"
            android:elevation="3dp"
            android:background="#fff"
            card_view:cardCornerRadius="@dimen/card_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_layout"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/userAddressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <ImageView
                    android:id="@+id/userAddressIcon"
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:layout_gravity="center_vertical"
                    android:elevation="4dp"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/ic_home_black_24dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="15dp"
                    android:textSize="@dimen/small_txt_size"
                    android:hint="@string/prompt_address" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#c0c0c0"/>

            <LinearLayout
            android:id="@+id/userMobileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

                <ImageView
                    android:id="@+id/userMobileIcon"
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:layout_gravity="center_vertical"
                    android:elevation="4dp"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/ic_phone_black_24dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="15dp"
                    android:textSize="@dimen/small_txt_size"
                    android:hint="@string/prompt_mobile_phone" />

            </LinearLayout>

            <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#c0c0c0"/>

            <LinearLayout
                android:id="@+id/userEmailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <ImageView
                    android:id="@+id/userEmailIcon"
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:layout_gravity="center_vertical"
                    android:elevation="4dp"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/ic_mail_outline_black_24dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="15dp"
                    android:textSize="@dimen/small_txt_size"
                    android:hint="@string/prompt_email" />
            </LinearLayout>




        </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>